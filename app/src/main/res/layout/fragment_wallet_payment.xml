<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.citrus.sample.WalletPaymentFragment">

        <Button
            android:id="@+id/btn_get_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Get Balance" />

        <Button
            android:id="@+id/btn_load_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Load Money" />

        <Button
            android:id="@+id/btn_new_pay_using_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Pay Using Citrus Cash(Using Bill)" />

        <Button
            android:id="@+id/btn_pg_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="PG Payment" />

        <Button
            android:id="@+id/btn_new_pg_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="New PG Payment" />

        <Button
            android:id="@+id/btn_lazypay_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Lazy Pay" />

        <Button
            android:id="@+id/btn_wallet_pg_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Wallet PG Payment"/>

        <Button
            android:id="@+id/btn_get_cashout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Get Withdraw Money Info" />

        <Button
            android:id="@+id/btn_cashout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Withdraw Money To Your Account" />

        <Button
            android:id="@+id/btn_send_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Send Money" />

        <Button
            android:id="@+id/btn_perform_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Perform Dynamic Pricing" />

        <Button
            android:id="@+id/btn_update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_margin"
            android:text="Update Profile" />

        <Button
            android:id="@+id/btn_get_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_margin"
            android:text="GetProfile" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Load "
            android:id="@+id/btn_autoLoad"
            android:layout_gravity="center_horizontal" />

       <!-- <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Subscription List"
            android:id="@+id/btnsubscriptionlist"
            android:layout_gravity="center_horizontal" />-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Active Subscription"
            android:id="@+id/btnactivesubscription"
            android:layout_gravity="center_horizontal" />

       <!-- <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get InActive Subscription"
            android:id="@+id/btninactivesubscription"
            android:layout_gravity="center_horizontal" />-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deactivate Subscription"
            android:id="@+id/btndeactivatesubscription"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscription using saved card"
            android:id="@+id/btnsavedcardsubscription"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="is Active Subscription Present"
            android:id="@+id/btnisActiveSubscription"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Subscription"
            android:id="@+id/btUpdateSubscription"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>